{    
  "exclude": [
      "dist",
      "node_modules"
  ],
  "compilerOptions": {
      "target": "es6",
      "declaration": true,
      "declarationMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "dist",
      "rootDir": "./src",
      "sourceMap": true,
      "inlineSources": true,
      "jsx": "react"
  },
  "include": [
      "src/**/*"
  ]
}