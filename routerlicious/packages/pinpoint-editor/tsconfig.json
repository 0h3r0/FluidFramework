{    
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ]
}