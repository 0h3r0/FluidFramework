{
  "name": "@prague/local-test-server",
  "version": "0.2.0",
  "description": "Local test server implementation",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": "false",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "tsc": "tsc",
    "build:esnext": "tsc --outDir lib --m esnext",
    "test": "mocha --recursive dist/test --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "webpack": "webpack --config webpack.config.js"
  },
  "author": "Microsoft",
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "repository": "microsoft/prague",
  "dependencies": {
    "@prague/api-definitions": "^0.2.0",
    "@prague/app-component": "^0.2.0",
    "@prague/app-datastore": "^0.2.0",
    "@prague/cell": "^0.2.0",
    "@prague/client-api": "^0.2.0",
    "@prague/container-definitions": "^0.2.0",
    "@prague/gitresources": "^0.2.0",
    "@prague/map": "^0.2.0",
    "@prague/memory-orderer": "^0.2.0",
    "@prague/routerlicious": "^0.2.0",
    "@prague/runtime-definitions": "^0.2.0",
    "@prague/services": "^0.2.0",
    "@prague/services-core": "^0.2.0",
    "@prague/services-utils": "^0.2.0",
    "@prague/sequence": "^0.2.0",
    "@prague/routerlicious-socket-storage": "^0.2.0",
    "@prague/socket-storage-shared": "^0.2.0",
    "@prague/test-utils": "^0.2.0",
    "@prague/utils": "^0.2.0",
    "@types/jsonwebtoken": "^8.3.0",
    "axios": "^0.18.0",
    "jsonwebtoken": "^8.4.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.12",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nock": "^10.0.1",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "ts-loader": "^4.5.0",
    "typescript": "^3.2.2",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2"
  }
}
