{    
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}