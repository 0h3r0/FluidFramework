{
  "name": "@prague/services-utils",
  "version": "0.1.0",
  "description": "Prague service lambdas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run tsc && npm run tslint",
    "build:full": "npm run build",
    "clean": "rimraf dist && rimraf lib",
    "test": "mocha --recursive dist/test",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@prague/runtime-definitions": "^0.1.0",
    "@prague/services-core": "^0.1.0",
    "@prague/utils": "^0.1.0",
    "@types/bytes": "^3.0.0",
    "@types/debug": "^0.0.31",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/nconf": "^0.0.37",
    "@types/randomstring": "^1.1.6",
    "bytes": "^3.0.0",
    "debug": "^4.1.0",
    "jsonwebtoken": "^8.4.0",
    "kafka-node": "^3.0.1",
    "moniker": "^0.1.2",
    "nconf": "^0.10.0",
    "randomstring": "^1.1.5",
    "winston": "^3.1.0"
  }
}
