{
  "name": "@prague/utils",
  "version": "0.2.0",
  "description": "Collection of utility functions for Prague",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": "false",
  "scripts": {
    "build": "npm run tsc && npm run build:esnext && npm run tslint",
    "build:full": "npm run build",
    "clean": "rimraf dist && rimraf lib",
    "build:esnext": "tsc --outDir lib --m esnext",
    "test": "mocha --recursive dist/test",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@prague/container-definitions": "^0.2.0",
    "@prague/gitresources": "^0.2.0",
    "@prague/runtime-definitions": "^0.2.0",
    "@types/debug": "^0.0.31",
    "@types/node": "^10.12.12",
    "lodash": "^4.17.11",
    "sha.js": "^2.4.11"
  }
}
