{
  "name": "@chaincode/flow-document",
  "description": "Experimental flow editor for collaborative journaling.",
  "version": "0.2.0",
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run tsc && npm run build:esnext && npm run tslint",
    "build:full": "npm run build && npm run webpack",
    "clean": "rimraf dist && rimraf lib",
    "tsc": "tsc",
    "build:esnext": "tsc --outDir lib --m esnext",
    "test": "mocha --recursive dist/test",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "webpack": "webpack --env=\"production\"",
    "webpack:full": "webpack --env=\"production\"",
    "dev": "webpack --env=\"development\" --watch",
    "publish-local": "npm publish --registry http://localhost:4873",
    "publish-patch-local": "npm version patch && npm run publish-local",
    "publish-wu2": "npm run build && npm publish --registry https://packages.wu2.prague.office-int.com"
  },
  "prague": {
    "browser": {
      "entrypoint": "main",
      "bundle": [
        "dist/main.bundle.js"
      ]
    }
  },
  "dependencies": {
    "@prague/app-component": "^0.2.0",
    "@prague/app-datastore": "^0.2.0",
    "@prague/map": "^0.2.0",
    "@prague/merge-tree": "^0.2.0",
    "@prague/runtime-definitions": "^0.2.0",
    "@prague/sequence": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^10.12.12",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^4.5.0",
    "typescript": "^3.2.2",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.2"
  }
}
