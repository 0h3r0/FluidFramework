{
  "name": "@prague/services-core",
  "version": "0.1.0",
  "description": "Prague services core definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run tsc && npm run tslint",
    "build:full": "npm run build",
    "clean": "rimraf dist && rimraf lib",
    "test": "mocha --recursive dist/test",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@prague/gitresources": "^0.1.0",
    "@prague/runtime-definitions": "^0.1.0",
    "@prague/utils": "^0.1.0",
    "@types/node": "^10.12.12",
    "debug": "^4.1.0",
    "tslint-microsoft-contrib": "^6.0.0"
  }
}
