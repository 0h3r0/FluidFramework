{
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": false,
        "incremental": true
    }
}