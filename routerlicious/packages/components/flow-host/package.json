{
  "name": "@chaincode/flow-host",
  "description": "React component that hosts a Flow-Editor instance w/toolbar, etc.",
  "version": "0.2.0",
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "main": "dist/main.bundle.js",
  "module": "dist/main.bundle.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:compile",
    "build:compile": "npm run webpack:dev",
    "build:dev": "npm run webpack:dev",
    "build:esnext": "tsc --outDir lib --m esnext",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "clean": "rimraf dist && rimraf lib",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "webpack": "webpack --env=\"production\"",
    "webpack:dev": "webpack --env=\"developement\"",
    "webpack:full": "webpack --env=\"production\"",
    "dev": "node ../../../common/tools/node_modules/@prague/prague-dev-server/bin/prague-dev-server.js --config webpack.config.js --package package.json",
    "publish-local-chart-view": "cd ../chart-view && npm run publish-local",
    "publish-local-flow-document": "cd ../flow-document && npm run publish-local",
    "publish-local-flow-editor": "cd ../flow-editor && npm run publish-local",
    "publish-local-flow-host": "cd ../flow-host && npm publish --registry http://localhost:4873",
    "publish-local-table-document": "cd ../table-document && npm run publish-local",
    "publish-local-table-slice": "cd ../table-slice && npm run publish-local",
    "publish-local-table-view": "cd ../table-view && npm run publish-local",
    "publish-local": "run-p publish-local-*",
    "publish-wu2-chart-view": "cd ../chart-view && npm run publish-wu2",
    "publish-wu2-flow-document": "cd ../flow-document && npm run publish-wu2",
    "publish-wu2-flow-editor": "cd ../flow-editor && npm run publish-wu2",
    "publish-wu2-flow-host": "cd ../flow-host && npm run publish-wu2",
    "publish-wu2-table-document": "cd ../table-document && npm run publish-wu2",
    "publish-wu2-table-slice": "cd ../table-slice && npm run publish-wu2",
    "publish-wu2-table-view": "cd ../table-view && npm run publish-wu2",
    "publish-wu2": "run-p publish-wu2-*",
    "republish": "docker-compose stop verdaccio && docker-compose rm -f -v verdaccio && docker-compose create --force-recreate verdaccio && docker-compose start verdaccio && npm run publish-local"
  },
  "prague": {
    "browser": {
      "entrypoint": "main",
      "bundle": [
        "dist/main.bundle.js"
      ]
    }
  },
  "dependencies": {
    "@chaincode/chart-view": "^0.2.0",
    "@chaincode/flow-document": "^0.2.0",
    "@chaincode/flow-editor": "^0.2.0",
    "@chaincode/table-document": "^0.2.0",
    "@chaincode/table-slice": "^0.2.0",
    "@chaincode/table-view": "^0.2.0",
    "@prague/app-component": "^0.2.0",
    "@prague/app-datastore": "^0.2.0",
    "@prague/component": "^0.2.0",
    "@prague/container-definitions": "^0.2.0",
    "@prague/flow-util": "^0.2.0",
    "@prague/runtime": "^0.2.0",
    "@prague/runtime-definitions": "^0.2.0",
    "@prague/utils": "^0.2.0",
    "@uifabric/icons": "~6.3.0",
    "office-ui-fabric-react": "^6.108.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.7",
    "@types/react-dom": "^16.0.11",
    "copyfiles": "^2.1.0",
    "css-loader": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
