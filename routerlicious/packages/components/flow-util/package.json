{
  "name": "@prague/flow-util",
  "version": "0.2.0",
  "description": "Shared utility code for Flow-* packages.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "git clean -fXd -e \\!**/node_modules/**",
    "build": "tsc --project tsconfig.prod.json && npm run tslint",
    "build:full": "npm run build",
    "dev": "tsc --project tsconfig.dev.json --watch",
    "bench": "ts-node --project tsconfig.prod.json bench/index.ts",
    "test": "ts-mocha -p tsconfig.dev.json \"test/**/*.{ts,tsx}\"",
    "tslint": "tslint --project tsconfig.json --format verbose"

  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/mocha": "^5.2.5",
    "benchmark": "^2.1.4",
    "jsdom": "^12.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.2"
  }
}
