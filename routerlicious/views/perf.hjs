{{<layout}}
    {{$styles}}
        <link href="{{#hfurl}}/public/stylesheets/dist/style.css{{/hfurl}}" rel="stylesheet" />
    {{/styles}}

    {{$content}}
        <div class="container-fluid">
            <div id="mapHeader"></div>
            <form id="text-form">
                <div class="form-group">
                    <label for="interval">Typing Interval (ms)</label>
                    <input type="text" class="form-control" id="interval" value="100">
                </div>
                <button type="submit" class="btn btn-default" id="start">Start Test</button>
            </form>
            <div id="mapValues"></div>
        </div>
    {{/content}}

    {{$scripts}}
        <script src="/socket.io/socket.io.js"></script>
        <script src="{{#hfurl}}/public/scripts/dist/index.js{{/hfurl}}"></script>
        <script>
            controller.perf.load("{{ id }}");
        </script>
    {{/scripts}}
{{/layout}}