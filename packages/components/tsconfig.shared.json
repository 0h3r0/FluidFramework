{
    "exclude": [
        "**/dist",
        "**/node_modules"
    ],
    "compilerOptions": {
        "target": "esnext",
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "incremental": true,
        "types": []
    }
}