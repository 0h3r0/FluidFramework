{
  "name": "flow-root",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream --scope '@chaincode/flow-document' --scope '@prague/flow-*' --scope '@prague/flow-app'",
    "build:full": "lerna run build --stream",
    "clean": "lerna run clean --stream --parallel",
    "postinstall": "(true) && lerna bootstrap",
    "start": "cd packages/app && npm run dev",
    "test": "lerna run test --stream",
    "tslint": "lerna run tslint --stream"
  },
  "devDependencies": {
    "lerna": "^3.1.4"
  }
}
